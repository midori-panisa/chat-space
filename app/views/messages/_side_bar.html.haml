.wrapper__chat-side
  .wrapper__chat-side__side-header
    .wrapper__chat-side__side-header__box
      %h3.wrapper__chat-side__side-header__box__user-name
        = current_user.name
      %ul.wrapper__chat-side__side-header__box__menu
        %li.wrapper__chat-side__side-header__box__menu__edit-user
          = link_to (new_group_path) do
            = icon('fas', 'edit')
        %li.wrapper__chat-side__side-header__boc__menu__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .wrapper__chat-side__groups
    - current_user.groups.each do |group|
      .wrapper__chat-side__groups__group
        =link_to group_messages_path(group) do
          %p.wrapper__chat-side__groups__group__group-name
            = group.name
          %p.wrapper__chat-side__groups__group__group-latest-message
            = group.show_last_message

  